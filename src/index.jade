mixin use(href)
  svg(role='img' style='width: 16px; height: 16px;')
    use(xlink:href=href)

mixin plump-button-icon
  a.plump.-button&attributes(attributes)
    .slot [ ]
    .slot
      span.text
        block

mixin plump-button
  a.plump.-button&attributes(attributes)
    .slot
      span.text
        block


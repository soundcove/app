mixin head(arguments)
  head&attributes(attributes)
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width' initial-scale='1')
    meta(name='theme-color' content=arguments.theme)
    meta(description=arguments.description)
    block

+head({ theme: 'blue', description: 'whatever' })

